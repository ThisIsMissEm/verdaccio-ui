{
  "name": "ui",
  "version": "1.0.0",
  "description": "Verdaccio User Interface",
  "author": "Verdaccio Core Team",
  "repository": {
    "type": "git",
    "url": "git://github.com/verdaccio/ui"
  },
  "main": "build/index.js",
  "bin": {
    "verdaccio": "./bin/verdaccio"
  },
  "dependencies": {
    "async": "2.6.1",
    "date-fns": "1.30.1",
    "js-base64": "2.5.1",
    "lodash": "4.17.11",
    "lunr-mutable-indexes": "2.3.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.7",
    "@material-ui/core": "4.0.0-alpha.1",
    "@material-ui/icons": "3.0.2",
    "@material-ui/styles": "4.0.0-alpha.1",
    "@types/classnames": "^2.2.7",
    "@types/lodash": "^4.14.120",
    "@types/node": "*",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.7",
    "@verdaccio/babel-preset": "^0.0.4",
    "@verdaccio/types": "5.0.0-beta.2",
    "autosuggest-highlight": "3.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "classnames": "^2.2.6",
    "cross-env": "5.2.0",
    "css-loader": "0.28.10",
    "file-loader": "2.0.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "github-markdown-css": "2.10.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.15.0-rc.8",
    "lint-staged": "7.3.0",
    "localstorage-memory": "1.0.2",
    "mini-css-extract-plugin": "0.4.3",
    "node-sass": "4.9.3",
    "normalize.css": "8.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "ora": "1.4.0",
    "prettier": "1.14.3",
    "prop-types": "15.6.2",
    "react-autosuggest": "9.4.2",
    "react-hot-loader": "^4.7.1",
    "react-router": "4.3.1",
    "react-router-dom": "^4.3.1",
    "resolve-url-loader": "3.0.0",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.0",
    "stylelint": "9.9.0",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-recommended-scss": "3.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.1",
    "stylelint-scss": "3.3.1",
    "stylelint-webpack-plugin": "0.10.5",
    "typeface-roboto": "0.0.54",
    "typescript": "latest",
    "url-loader": "1.1.1",
    "verdaccio": "^3.11.4",
    "webpack": "4.20.2",
    "webpack-bundle-analyzer": "3.0.2",
    "webpack-cli": "3.1.1",
    "webpack-dev-server": "3.1.14",
    "webpack-merge": "4.1.4",
    "whatwg-fetch": "3.0.0",
    "xss": "1.0.3"
  },
  "keywords": [
    "verdaccio",
    "verdaccio-ui"
  ],
  "scripts": {
    "pre:webpack": "rimraf static/*",
    "dev:start": "verdaccio",
    "dev:webui": "cross-env BABEL_ENV=ui babel-node tools/dev.server.js",
    "lint:css": "stylelint 'src/webui/**/styles.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.yaml": [
        "prettier --parser yaml --no-config --single-quote --write",
        "git add"
      ],
      "*": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "*.json"
    ]
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/verdaccio",
    "logo": "https://opencollective.com/verdaccio/logo.txt"
  }
}
