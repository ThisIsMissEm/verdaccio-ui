{
    "compilerOptions": {
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "diagnostics": true,
      "lib": ["dom", "es2018", "esnext"],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "sourceMap": true,
      "jsx": "react",
      "allowJs": true,
      "checkJs": false,
      "strict": true,
      "baseUrl": ".",
      "outDir": "lib"
    },
    "include": [
      "src",
      "types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
    ]
  }
  
  