{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
  },
  "include": [
    "src",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
