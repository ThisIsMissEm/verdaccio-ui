{
  "compilerOptions": {    
    "lib": ["dom", "es2018", "esnext"],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "sourceMap": true,  
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "./types/**/*"]
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
