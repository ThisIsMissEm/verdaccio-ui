{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "rules": {
    "no-const-assign": "error",
    "no-var": "warn",
    "prefer-const": [
      "warn",
      {
        "destructuring": "all"
      }
    ],
    "no-duplicate-imports": "error",
    "import/no-duplicates": "error",
    "node/no-deprecated-api": "error"
  }
}
